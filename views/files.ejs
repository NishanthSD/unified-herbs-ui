        <% folderStructure.forEach(folder => { %>
          <% folder.subfolders.forEach(subfolder => { %>
            <% if (subfolder.type === 'file' && subfolder.name.endsWith('.txt')) { %>
              <div class="file">
                <div class="file-icon">ðŸ“œ</div>
                <h3>
                  <a href="<%= subfolder.path %>" download><%= subfolder.name %></a>
                </h3>
              </div>
            <% } %>
          <% }) %>
        <% }) %>
      </div>
    </details>
  </div>

  <!-- Footer Section -->
  <footer id="foots">
    <div class="footer-container">
      <p>&copy; 2025 AUDIST HERBS. All rights reserved.</p>
      <p>Contact us at: <a href="mailto:sskumar2k@gmail.com">sskumar2k@gmail.com</a></p>
      <p>Funded By : DST SERB</p>
    </div>
  </footer>

</body>
</html>
