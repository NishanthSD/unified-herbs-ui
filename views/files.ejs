              <div class="file">
                <div class="file-icon">ðŸ“„</div>
                <h3>
                  <a href="<%= subfolder.path %>" download><%= subfolder.name %></a>
                </h3>
              </div>
            <% } %>
          <% }) %>
        <% }) %>
      </div>
    </details>

    <!-- TXT Files -->
    <details id="txt">
      <summary>TXT Files ðŸ“œ</summary>
